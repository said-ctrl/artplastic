{% extends 'base.html.twig' %}
{% block title %}Mon site de com
{% endblock %}

{% block body %}
<style>
    section {
        margin: 0;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #000; /* Fond noir pour mieux voir l'image */
    }
    .image-container {
        transition: transform 0.2s; /* Animation douce pour le zoom */
    }
    img {
        max-width: 100%;
        max-height: 100%;
    }
</style>
<section>
<div class="image-container" id="imageContainer">
    <img src="{{ asset('images/' ~ prod3d.image) }}" alt="Image" id="mainImage">
</div>
</section>
<script>
    const container = document.getElementById('imageContainer');
    let scale = 1;

    // Fonction pour zoomer
    function zoomIn() {
        scale += 0.1;
        container.style.transform = `scale(${scale})`;
    }

    // Fonction pour dézoomer
    function zoomOut() {
        scale = Math.max(1, scale - 0.1); // Empêche le zoom en dessous de 1
        container.style.transform = `scale(${scale})`;
    }

    // Écouteurs d'événements pour zoomer/dézoomer
    window.addEventListener('wheel', (event) => {
        if (event.deltaY < 0) {
            zoomIn();
        } else {
            zoomOut();
        }
    });
</script>

{% endblock %}

